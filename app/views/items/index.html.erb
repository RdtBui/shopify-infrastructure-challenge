<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>SKU</th>
      <th>Brand</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Category</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.summary %></td>
        <td><%= item.sku %></td>
        <td><%= item.brand %></td>
        <td><%= item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.category %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Item', new_item_path %> | <%= link_to 'Reports', reports_path %>

<style>
table, th, td {
    border:1px solid black;
}
</style>