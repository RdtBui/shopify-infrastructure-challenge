<p id="notice"><%= notice %></p>

<h1>Logs</h1>

<table>
  <thead>
    <tr>
      <th>Item title</th>
      <th>Item sku</th>
      <th>Item price</th>
      <th>Item quantity</th>
      <th>Item brand</th>
      <th>String</th>
      <th>Item category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.item_title %></td>
        <td><%= log.item_sku %></td>
        <td><%= log.item_price %></td>
        <td><%= log.item_quantity %></td>
        <td><%= log.item_brand %></td>
        <td><%= log.string %></td>
        <td><%= log.item_category %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log', new_log_path %>
